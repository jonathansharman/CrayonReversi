// Interface for a human-controlled Reversi player.
class Human : Player {
	constructor() : base() {}

	function autoPlay(game) {
		if (game.validMoves.length > 0) {
			if (Input.left_click) {
				move = [Input.mouse_y / CELL_HEIGHT, Input.mouse_x / CELL_WIDTH];
				game.play(move);
			}
		} else {
			// No valid moves. Pass.
			game.pass();
		}
	}

	function toString() {
		return "Human";
	}
}
